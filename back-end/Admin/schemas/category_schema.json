    "type": "object",
    "properties": {
      "status": {
        "type": "string"
      },
      "menu-categories": {
        "type": "array",
        "items": [
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "name"
            ]
          }
        ]
      }
    },
    "required": [
      "status",
      "menu-categories"
    ]
  }